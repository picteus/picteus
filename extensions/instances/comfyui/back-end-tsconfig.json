    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "outDir": "./dist/back-end",
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "noImplicitAny": true,
    "sourceMap": false
  },
  "include": ["./src/back-end/**/*"]
}

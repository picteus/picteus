{
  "id": "freepik",
  "version": "1.0.0",
  "name": "Freepik",
  "description": "Accesses to all sorts of Google Gemini image-related features.",
  "runtimes": [
    {
      "environment": "node"
    }
  ],
  "instructions": [
    {
      "events": [
        "process.started", "process.runCommand", "image.created", "image.updated", "image.computeTags"
      ],
      "throttlingPolicies": [
        {
          "events": ["image.created", "image.updated", "image.computeTags"],
          "maximumCount": 4
        }
      ],
      "capabilities": [
        {
          "id": "image.tags"
        }
      ],
      "execution": {
        "executable": "${node}",
        "arguments": [
          "./dist/main.js"
        ]
      },
      "commands": [
        {
          "id": "synchronize",
          "on": {
            "entity": "Process"
          },
          "specifications": [
            {
              "locale": "en",
              "label": "Synchronize the images",
              "description": "Synchronizes the Freepik images by downloading their output and storing them into the extension repository."
            }
          ]
        }
      ]
    }
  ],
  "ui": {
    "elements": [
      {
        "anchor": "window",
        "url": "https://www.freepik.com/pikaso"
      }
    ]
  },
  "settings": {
    "type": "object",
    "properties": {
      "apiKey": {
        "type": "string",
        "title": "API Key",
        "description": "The API key used when interacting with Freepik."
      }
    },
    "required": [
      "apiKey"
    ]
  }
}
